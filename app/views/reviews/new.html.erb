<div class="container">
  <h1>Add a new review for <%= @restaurant.name %></h1>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, collection: Review::RATING %>
    <%= f.submit "Add your review", class: "btn btn-primary" %>
  <% end %>
  <br>
  <p><%= link_to "↩️ Back to the restaurant", restaurant_path(@restaurant), class:"btn btn-secondary" %></p>
</div>
