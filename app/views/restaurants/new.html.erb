<div class="container">
  <h1>Add a new restaurant</h1>
  <%= simple_form_for [@restaurant] do |f| %>
    <%= f.input :name %>
    <%= f.input :category, collection: Restaurant::CATEGORY %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.submit "Add a restaurant", class: "btn btn-primary" %>
  <% end %>
  <br>
  <p><%= link_to "↩️ Back to the list of restaurants", restaurants_path, class:"btn btn-secondary" %></p>
</div>
