<div class="container">
  <h1><%= @restaurant.name %></h1>


  <p>Category: <%= @restaurant.category.capitalize %></p>
  <p>Address: <%= @restaurant.address %></p>
  <p>Phone Number:<%= @restaurant.phone_number %></p>

  <%= link_to " Add a review", new_restaurant_review_path(@restaurant), class:"btn btn-primary" %>
  <%= link_to "↩️ Back to the list of restaurants", restaurants_path, class:"btn btn-secondary" %>
  <br>
  <ul class="mt-3">
    <% @restaurant.reviews.each do |review| %>
    <li><%= review.rating %> - <%= review.content %></li>
    <% end %>
  </ul>

</div>
